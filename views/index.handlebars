<div class="background">
  <h1>The Burger Place&trade;</h1>
  <div class="notDevouredLeft">
    <div class="row">
      <div class="col-sm-3 transbox">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">Burgers that are not devoured!</h2>
            <p class="card-text">
            <ul>
              {{#each burgers}}
              {{#unless devoured}}
              {{> burgers/burger-block devour=true}}
              {{/unless}}
              {{/each}}
            </ul>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="devouredRight">
    <div class="row">
      <div class="col-sm-3 transbox">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">Burgers that are devoured!</h2>
            <p class="card-text">
            <ul>
              {{#each burgers}}
              {{#if devoured}}
              {{> burgers/burger-block devour=false}}
              {{/if}}
              {{/each}}
            </ul>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="addBurgerCenter">
    <div class="row">
      <div class="col-sm-3 transbox">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">Add a Burger</h2>
            <p class="card-text">
            <form class="create-form">
              <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="burger_name">
                <div class="form-group">
                  <label for="devoured">Devoured?</label><br>
                  <input type="radio" name="devoured" value="1" checked> Devoured!<br>
                  <input type="radio" name="devoured" value="0"> Not Devoured!
                </div>
                <button class="add-burger" type="submit">ADD BURGER</button>
              </div>
            </form>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>